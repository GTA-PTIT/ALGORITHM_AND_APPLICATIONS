#include <bits/stdc++.h>
using namespace std;

#define quick() ios_base::sync_with_stdio(false); cin.tie(0);
#define pb push_back
using ll = long long;
int mod = 1000000007;

void Run()
{
    int test;
    cin >> test;
    while(test--)
    {
        int n;
        cin >> n;
        if(n % 2)
            cout << 1ll * (n + 1)/2 *n << endl;
        else
            cout << 1ll * n / 2 * (n + 1) << endl;
    }
}

int main(){
    quick();
    Run();
}
